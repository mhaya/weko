{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "tokenizer": {
        "ja_tokenizer": {
          "type": "kuromoji_tokenizer",
          "mode": "search"
        },
        "ngram_tokenizer": {
          "type": "nGram",
          "min_gram": 2,
          "max_gram": 3,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "analyzer": {
        "ja_analyzer": {
          "tokenizer": "ja_tokenizer",
          "filter": [
            "kuromoji_baseform",
            "kuromoji_part_of_speech",
            "cjk_width",
            "stop",
            "kuromoji_stemmer",
            "lowercase"
          ]
        },
        "ngram_analyzer": {
          "type": "custom",
          "char_filter": [
            "html_strip"
          ],
          "tokenizer": "ngram_tokenizer",
          "filter": [
            "cjk_width",
            "lowercase"
          ]
        },
        "wk_analyzer": {
          "type": "custom",
          "char_filter": [
            "html_strip"
          ],
          "tokenizer": "standard",
          "filter": [
            "standard",
            "lowercase",
            "stop",
            "cjk_width"
          ]
        },
        "paths": {
          "tokenizer": "path_hierarchy"
        }
      }
    }
  },
  "mappings": {
    "author": {
      "properties": {
        "authorNameInfo": {
          "type": "object",
          "properties": {
            "familyName": {
              "type": "string"
            },
            "firstName": {
              "type": "string"
            },
            "fullName": {
              "type": "string",
              "fields": {
                "raw": {
                  "type": "string",
                  "index": "not_analyzed"
                }
              }
            },
            "language": {
              "type": "string",
              "index":  "no"
            },
            "nameFormat": {
              "type": "string",
              "index":  "no"
            },
            "nameShowFlg": {
              "type": "boolean"
            }
          }
        },
        "authorIdInfo": {
          "type": "object",
          "properties": {
            "authorId": {
              "type": "string"
            },
            "idType": {
              "type": "string",
              "index":  "no"
            },
            "authorIdShowFlg": {
              "type": "boolean"
            }
          }
        },
        "emailInfo": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "fields": {
                "raw": {
                  "type": "string",
                  "index": "not_analyzed"
                }
              }
            }
          }
        }
      }
    }
  }
}
